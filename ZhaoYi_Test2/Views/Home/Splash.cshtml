@{
    ViewData["Title"] = "Welcome to ZhaoYi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #ffffff;
        }

        .splash-container {
            text-align: center;
            animation: fadeIn 1s ease-in;
        }

        .logo {
            width: 324px;
            height: auto;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <img src="~/images/logo.png" alt="ZhaoYi Logo" class="logo" />
    </div>

    <script>
        // Tự động chuyển hướng đến trang phiên dịch viên sau 1.5 giây
        setTimeout(function() {
            window.location.href = '@Url.Action("Dashboard", "Interpreters")';
        }, 1500);
    </script>
</body>
</html>