@model ZhaoYi_Test2.Models.JobApplication
@{
    ViewData["Title"] = "Chi tiết đơn ứng tuyển";
    var jobPosting = Model.JobPosting;
    var recruiter = jobPosting?.Recruiter;
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Interpreters" asp-action="Dashboard">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-controller="JobApply" asp-action="MyApplications">Đơn ứng tuyển của tôi</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết đơn ứng tuyển</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Thông tin công việc -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center
                              @(Model.Status == ApplicationStatus.Rejected ? "bg-light" : "bg-primary text-white")">
                    <h5 class="mb-0">@jobPosting.Title</h5>

                    @{
                        var statusClass = Model.Status switch
                        {
                            ApplicationStatus.Pending => "bg-warning",
                            ApplicationStatus.Accepted => "bg-success",
                            ApplicationStatus.Rejected => "bg-danger",
                            _ => "bg-secondary"
                        };
                    }
                    <span class="badge @statusClass">@Model.Status</span>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Công ty:</dt>
                                <dd class="col-sm-7">@(recruiter?.RecruiterName ?? "Không có thông tin")</dd>

                                <dt class="col-sm-5">Lương:</dt>
                                <dd class="col-sm-7">@jobPosting.Salary.ToString("N0") VND</dd>

                                <dt class="col-sm-5">Địa điểm:</dt>
                                <dd class="col-sm-7">@jobPosting.WorkLocation</dd>

                                <dt class="col-sm-5">Lĩnh vực:</dt>
                                <dd class="col-sm-7">@(string.IsNullOrEmpty(jobPosting.Field) ? "Không có" : jobPosting.Field)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Ngày đăng:</dt>
                                <dd class="col-sm-7">@jobPosting.PostedDate.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-5">Hết hạn:</dt>
                                <dd class="col-sm-7">@jobPosting.ExpiryDate.ToString("dd/MM/yyyy")</dd>

                                @if (Model.Status == ApplicationStatus.Accepted)
                                {
                                    <dt class="col-sm-5">Trạng thái công việc:</dt>
                                    <dd class="col-sm-7">
                                        @{
                                            var jobStatusClass = jobPosting.Status switch
                                            {
                                                JobStatus.Active => "bg-success",
                                                JobStatus.Completed => "bg-info",
                                                JobStatus.InProgress => "bg-primary",
                                                JobStatus.Expired => "bg-secondary",
                                                JobStatus.Cancelled => "bg-danger",
                                                JobStatus.Pending => "bg-warning",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @jobStatusClass">@jobPosting.Status</span>
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <h6>Mô tả công việc</h6>
                    <div class="card mb-3">
                        <div class="card-body bg-light">
                            @Html.Raw(jobPosting.JobDescription.Replace("\n", "<br />"))
                        </div>
                    </div>

                    @if (Model.Status == ApplicationStatus.Pending)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i> Đơn ứng tuyển của bạn đang chờ phản hồi từ nhà tuyển dụng.
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-controller="JobApply" asp-action="DeleteApplication" asp-route-id="@Model.JobApplicationId"
                               class="btn btn-outline-danger"
                               onclick="return confirm('Bạn có chắc chắn muốn hủy đơn ứng tuyển này?')">
                                <i class="bi bi-trash"></i> Hủy đơn ứng tuyển
                            </a>
                        </div>
                    }
                    else if (Model.Status == ApplicationStatus.Accepted)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> Chúc mừng! Đơn ứng tuyển của bạn đã được chấp nhận.
                            @if (jobPosting.Status == JobStatus.InProgress)
                            {
                                <p class="mb-0 mt-2">Công việc đang được thực hiện.</p>
                            }
                            else if (jobPosting.Status == JobStatus.Completed)
                            {
                                <p class="mb-0 mt-2">Công việc đã hoàn thành.</p>
                            }
                        </div>
                    }
                    else if (Model.Status == ApplicationStatus.Rejected)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle"></i> Đơn ứng tuyển của bạn đã bị từ chối.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Thông tin đơn ứng tuyển -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Thông tin đơn ứng tuyển</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Họ và tên:</dt>
                        <dd class="col-sm-7">@Model.InterpreterName</dd>

                        <dt class="col-sm-5">Email:</dt>
                        <dd class="col-sm-7">@Model.Email</dd>

                        <dt class="col-sm-5">Điện thoại:</dt>
                        <dd class="col-sm-7">@Model.PhoneNumber</dd>

                        <dt class="col-sm-5">Ngày ứng tuyển:</dt>
                        <dd class="col-sm-7">@Model.ApplicationDate.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>

            <!-- Hiển thị CV -->
            @if (!string.IsNullOrEmpty(Model.CVFilePath))
            {
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">CV đã nộp</h5>
                    </div>
                    <div class="card-body">
                        <div class="ratio ratio-1x1">
                            <iframe src="@Url.Content($"~/uploads/cv/{Model.CVFilePath}")"
                                    class="embed-responsive-item"
                                    style="width:100%; height:400px;"
                                    allowfullscreen></iframe>
                        </div>
                        <div class="mt-3">
                            <a href="@Url.Content($"~/uploads/cv/{Model.CVFilePath}")" target="_blank" class="btn btn-primary w-100">
                                <i class="bi bi-download"></i> Tải xuống CV
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">CV đã nộp</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info mb-0">
                            Bạn chưa nộp CV cho đơn ứng tuyển này.
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
