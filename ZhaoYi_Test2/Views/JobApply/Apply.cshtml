@model ZhaoYi_Test2.Models.JobApplication
@{
    ViewData["Title"] = "Ứng tuyển";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-controller="JobApply" asp-action="Details" asp-route-id="@Model.JobPostingId">Chi tiết công việc</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ứng tuyển</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Đơn ứng tuyển</h5>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="JobPostingId" />
                        <input type="hidden" asp-for="InterpreterId" />

                        <div class="form-group mb-3">
                            <label asp-for="InterpreterName" class="form-label">Họ và tên</label>
                            <input asp-for="InterpreterName" class="form-control" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="cvFile" class="form-label">Tải lên CV (PDF)</label>
                            <input type="file" id="cvFile" name="cvFile" class="form-control" accept=".pdf" />
                            <div class="form-text">Chỉ chấp nhận file PDF. Kích thước tối đa 5MB.</div>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmCheck" required>
                            <label class="form-check-label" for="confirmCheck">
                                Tôi xác nhận rằng thông tin cung cấp là chính xác và đồng ý với các điều khoản dịch vụ.
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Gửi đơn ứng tuyển</button>
                            <a asp-controller="JobApply" asp-action="Details" asp-route-id="@Model.JobPostingId" class="btn btn-outline-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

